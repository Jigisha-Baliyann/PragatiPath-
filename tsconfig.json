{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "types": ["node"],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "baseUrl": ".",                
    "paths": {
      "@/*": ["./*"],
      "@user/*": ["user-panel/*"],
      "@admin/*": ["admin-panel/*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "user-panel",
    "admin-panel",
    "vite.config.*.ts",
    "vite-env.d.ts"               // ðŸ‘ˆ include env types
  ]
}
